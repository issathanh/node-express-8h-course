//Destructuring method out of the fs module 
const { readFile, writeFile } = require('fs')
console.log('start')
//expect 3 paramter (path, encoding, calls back with error and result parameter)
readFile('./content/first.txt', 'utf8', (error, result) => {
    if (error) {
        console.log(error)
        return;
    }
    const first = result;
    readFile('./content/second.txt', 'utf8', (error, result) => {
        if (error) {
            console.log(error)
            return;
        }
        const second = result;
        writeFile('./content/result-async.txt', 
            `result: ${first},${second}`,
            (err,result)=>{
                if(err){
                    console.log(err)
                    return;
                }
                console.log('done with this task')
                
            }
        )
    })
})

console.log('starting next task')